<section class="collection-teaser" aria-labelledby="teaser-title">
  <h2 id="teaser-title">{{ 'teaser.title' | t: default: 'Рекомендовані товари' }}</h2>

  {% if collection and collection.products_count > 0 %}
    <div class="product-grid">
      {%- for product in collection.products -%}
        {% render 'card-product', product: product %}
      {%- endfor -%}
    </div>
  {% else %}
    <p>{{ 'teaser.empty' | t: default: 'У цій колекції поки немає товарів' }}</p>
  {% endif %}
</section>
