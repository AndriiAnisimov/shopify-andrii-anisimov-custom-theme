{% comment %}
Product Inquiry / Add to Cart Form
Includes variant.id, custom properties, accessibility, honeypot, translation.
{% endcomment %}

<section class="product-inquiry-form" aria-labelledby="product-inquiry-heading">
    <h2 id="product-inquiry-heading">{{ 'forms.product_inquiry_heading' | t }}</h2>

    {% form 'product', product %}
        {% if form.errors %}
            <div class="form-errors" role="alert" aria-live="assertive">
                <p>{{ 'forms.general_errors' | t }}</p>
                <ul>
                    {% for field, messages in form.errors %}
                        {% for message in messages %}
                            <li><a href="#{{ field }}">{{ message }}</a></li>
                        {% endfor %}
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        <!-- Honeypot -->
        <div style="display:none;">
            <label for="hp">{{ 'forms.honeypot_label' | t }}</label>
            <input type="text" id="hp" name="contact[honeypot]" tabindex="-1" autocomplete="off">
        </div>

        <!-- Variant ID -->
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

        <!-- Quantity -->
        <div>
            <label for="quantity">{{ 'forms.quantity' | t }}</label>
            <input id="quantity" type="number" name="quantity" value="1" min="1">
        </div>

        <!-- Custom properties -->
        <div>
            <label for="property_reason">{{ 'forms.property_reason' | t }}</label>
            <input id="property_reason" type="text" name="properties[Reason]">
        </div>

        <div>
            <label for="property_contact">{{ 'forms.property_contact' | t }}</label>
            <select id="property_contact" name="properties[Preferred contact]">
                <option value="email">{{ 'forms.contact_email' | t }}</option>
                <option value="phone">{{ 'forms.contact_phone' | t }}</option>
            </select>
        </div>

        {% if product.selected_or_first_available_variant.available %}
            <button type="submit" {% if form.submitting %}disabled aria-busy="true"{% endif %}>
                {{ 'forms.add_to_cart' | t }}
            </button>
        {% else %}
            <button type="button" disabled>{{ 'forms.sold_out' | t }}</button>
            <p>{{ 'forms.variant_unavailable' | t }}</p>
        {% endif %}

        <div role="status" aria-live="polite">
            {% if form.posted_successfully? %}
                <p>{{ 'forms.success_message' | t }}</p>
            {% endif %}
        </div>
    {% endform %}
</section>

{% schema %}
{
  "name": "Product Inquiry Form",
  "settings": [],
  "presets": [
    {
      "name": "Product Inquiry Form"
    }
  ]
}
{% endschema %}
