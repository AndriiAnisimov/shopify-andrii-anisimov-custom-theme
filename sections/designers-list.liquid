{% schema %}
{
  "name": "Designers List",
  "settings": [],
  "presets": [{ "name": "Designers list" }]
}
{% endschema %}

<div class="designers-grid">
    {% if collection.metafields.custom.designers.value %}
        {% for designer in collection.metafields.custom.designers.value %}
            <div class="designer-card">
                <img src="{{ designer.photo | image_url: width: 200 }}" alt="{{ designer.name }}">
                <h3>{{ designer.name }}</h3>
                <p class="role">{{ designer.role }}</p>
                <p>{{ designer.bio }}</p>

                <div class="tags">
                    {% for tag in designer.tags %}
                        <span class="tag">{{ tag }}</span>
                    {% endfor %}
                </div>

                <div class="links">
                    {% for link in designer.links %}
                        <a href="{{ link }}" target="_blank">{{ link }}</a>
                    {% endfor %}
                </div>

                <p class="dob">Date of birth: {{ designer.dob | date: "%B %d, %Y" }}</p>

                {% if designer.verified %}
                    <div class="verified">âœ” Verified Designer</div>
                {% endif %}
            </div>
        {% endfor %}
    {% else %}
        <p>No designers linked to this collection.</p>
    {% endif %}
</div>
