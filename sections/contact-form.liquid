{% comment %}
Contact Form Section
Accessible, translatable, honeypot, ARIA support.
{% endcomment %}

<section class="contact-form-section max-w-2xl mx-auto p-8 bg-white rounded-2xl shadow-md space-y-6" aria-labelledby="contact-form-heading">
    <h2 id="contact-form-heading" class="text-2xl font-semibold text-gray-800 text-center">
        {{ 'forms.contact_heading' | t }}
    </h2>

    {% form 'contact', contact_form %}
        {% if form.errors %}
            <div class="form-errors bg-red-50 border border-red-200 text-red-700 p-4 rounded-lg" role="alert" aria-live="assertive">
                <p class="font-medium mb-2">{{ 'forms.general_errors' | t }}</p>
                <ul class="list-disc list-inside space-y-1 text-sm">
                    {% for error in form.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        <div style="display:none;">
            <label for="hp" class="sr-only">{{ 'forms.honeypot_label' | t }}</label>
            <input type="text" id="hp" name="contact[honeypot]" tabindex="-1" autocomplete="off">
        </div>

        <div class="flex flex-col space-y-2">
            <label for="contact_name" class="text-sm font-medium text-gray-700">{{ 'forms.name' | t }}</label>
            <input id="contact_name" type="text" name="contact[name]" value="{{ form.name }}" autocomplete="name"
                   class="border border-gray-300 rounded-lg p-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        </div>

        <div class="flex flex-col space-y-2">
            <label for="contact_email" class="text-sm font-medium text-gray-700">{{ 'forms.email' | t }} *</label>
            <input id="contact_email" type="email" name="contact[email]" value="{{ form.email }}" required
                   aria-invalid="{{ form.errors.email | default: false }}" aria-describedby="contact_email_error"
                   class="border border-gray-300 rounded-lg p-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            {% if form.errors.email %}
                <span id="contact_email_error" class="text-sm text-red-600">{{ form.errors.email | first }}</span>
            {% endif %}
        </div>

        <div class="flex flex-col space-y-2">
            <label for="contact_phone" class="text-sm font-medium text-gray-700">{{ 'forms.phone' | t }}</label>
            <input id="contact_phone" type="tel" name="contact[phone]" value="{{ form.phone }}" autocomplete="tel"
                   class="border border-gray-300 rounded-lg p-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        </div>

        <div class="flex flex-col space-y-2">
            <label for="contact_message" class="text-sm font-medium text-gray-700">{{ 'forms.message' | t }} *</label>
            <textarea id="contact_message" name="contact[body]" required
                      aria-invalid="{{ form.errors.body | default: false }}" aria-describedby="contact_message_error"
                      class="border border-gray-300 rounded-lg p-2.5 h-32 resize-y focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">{{ form.body }}</textarea>
            {% if form.errors.body %}
                <span id="contact_message_error" class="text-sm text-red-600">{{ form.errors.body | first }}</span>
            {% endif %}
        </div>

        <div role="status" aria-live="polite">
            {% if form.posted_successfully? %}
                <p class="text-green-600 font-medium">{{ 'forms.success_message' | t }}</p>
            {% endif %}
        </div>

        <button type="submit"
                class="w-full bg-blue-600 text-white font-medium py-2.5 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition disabled:opacity-50 disabled:cursor-not-allowed"
                {% if form.submitting %}disabled aria-busy="true"{% endif %}>
            {{ 'forms.submit' | t }}
        </button>
    {% endform %}
</section>

{% schema %}
{
  "name": "Contact Form",
  "settings": [],
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}
